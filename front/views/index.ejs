<html>
<head>
	<link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
	<link href="style.css" rel="stylesheet">

	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>

<nav class="navbar navbar-default navbar-static-top" >
	<div class="container">
		<div class="navbar-header">
			<a class="navbar-brand" href="/">AWS Project</a>
		</div>
		<div id="navbar" class="navbar-collapse collapse">
			<ul class="nav navbar-nav navbar-right">
				<li><a href="/">Upload images</a></li>
				<li><a href="images">Original images</a></li>
			</ul>
		</div>
	</div>
</nav>


<div class="container">
	<section id="section1" class="panel panel-default">

		<div class="panel-heading">
			<div class="container">
				<h3 class="panel-title">Upload a image to Amazon S3</h3>
			</div>
		</div>
		<div class="panel-body">
			<form action="https://<%=bucket%>.s3.amazonaws.com/" method="POST" id="sign-up-form" class="form-horizontal" enctype="multipart/form-data">

				<div class="container">
                    <% fields.forEach(function(elem){ %>
					<input type="hidden" name="<%= elem.name  %>" value="<%=elem.value %>"/>
                    <%}); %>

					<div class="col-xs-5">
						<div class="form-group">
							<!--<label for="exampleInputFile">File input</label>-->
							<input type="file" name="file">
							<!--<p class="help-block">File will be send to the bucket <%=bucket%> </p>-->
						</div>
					</div>
				</div>

				<div class="container">
					<div class="col-xs-3">
						<input type="submit" class="btn  btn-primary btn-block" value="Send"/>
					</div>
				</div>
			</form>
		</div>
		<footer class="panel-footer">

		</footer>
	</section>
</div>
</body>
</html>
