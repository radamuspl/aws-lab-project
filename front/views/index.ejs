<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
	<link href="http://netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css" rel="stylesheet">
	<link href="style.css" rel="stylesheet">

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
	<script>
        $(function(){
            $("#navbar").load("navbar.html");
        });
	</script>
</head>
<body>

<div id="navbar"></div>

<div class="container">
	<section id="section1" class="panel panel-default">

		<div class="panel-heading">
			<div class="container">
				<h3 class="panel-title">Upload a image to Amazon S3</h3>
			</div>
		</div>
		<div class="panel-body">
			<form action="https://<%=bucket%>.s3.amazonaws.com/" method="POST" id="sign-up-form"
				  class="form-horizontal" enctype="multipart/form-data" target="_blank">

				<div class="container">
                    <% fields.forEach(function(elem){ %>
					<input type="hidden" name="<%= elem.name  %>" value="<%=elem.value %>"/>
                    <%}); %>

					<div class="col-xs-5">
						<div class="form-group">
							<!--<label for="exampleInputFile">File input</label>-->
							<input type="file" name="file" accept="image/*">
							<!--<p class="help-block">File will be send to the bucket <%=bucket%> </p>-->
						</div>
					</div>
				</div>

				<div class="container">
					<div class="col-xs-3">
						<input type="submit" class="btn  btn-primary btn-block" value="Send"/>
					</div>
				</div>
			</form>
		</div>
		<footer class="panel-footer">

		</footer>
	</section>
</div>
</body>
</html>
